@model IEnumerable<Godius.Shop.Models.GoodsCategory>

<p>
    <a asp-action="CreateCategory">새 카테고리 등록</a>
</p>
<table class="table">
    <thead>
        <tr>
			<th>
                @Html.DisplayNameFor(model => model.SerialCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SerialCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.Id">수정</a> |
                <a asp-action="DetailsCategory" asp-route-id="@item.Id">상세정보</a> |
                <a asp-action="DeleteCategory" asp-route-id="@item.Id">삭제</a>
            </td>
        </tr>
}
    </tbody>
</table>
