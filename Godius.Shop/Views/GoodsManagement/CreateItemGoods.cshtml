@model Godius.Shop.Models.ItemGoods

@{
    ViewData["Title"] = "아이템 상품 등록";
}

<h3>아이템 상품 등록</h3>

<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="CreateItemGoods">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="GoodsId" />
			<div class="form-group">
				<label asp-for="Probability" class="control-label"></label>
				<input asp-for="Probability" class="form-control" />
				<span asp-validation-for="Probability" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NeedAdditionalUpgrade" class="control-label"></label>
				<input asp-for="NeedAdditionalUpgrade" class="form-control" />
				<span asp-validation-for="NeedAdditionalUpgrade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ItemId" class="control-label"></label>
				<select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemsName"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
	<a asp-action="EditGoods" asp-route-id="@Model.GoodsId">뒤로</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
