@model Godius.Shop.Models.ItemViewModels.CreateItemViewModel

@{
    ViewData["Title"] = "새 아이템 등록";
}

<h3>새 아이템 등록</h3>

<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Category" class="control-label"></label>
				<select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<ItemCategories>()"></select>
				<span asp-validation-for="Category"></span>
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" rows="5" cols="50" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Weight" class="control-label"></label>
				<input asp-for="Weight" class="form-control" />
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WC" class="control-label"></label>
				<input asp-for="WC" class="form-control" />
				<span asp-validation-for="WC" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AC" class="control-label"></label>
				<input asp-for="AC" class="form-control" />
				<span asp-validation-for="AC" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="HC" class="control-label"></label>
				<input asp-for="HC" class="form-control" />
				<span asp-validation-for="HC" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DC" class="control-label"></label>
				<input asp-for="DC" class="form-control" />
				<span asp-validation-for="DC" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Durability" class="control-label"></label>
				<input asp-for="Durability" class="form-control" />
				<span asp-validation-for="Durability" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image" class="control-label"></label>
				<input asp-for="Image" type="file" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Generation" class="control-label"></label>
				<input asp-for="Generation" class="form-control" />
				<span asp-validation-for="Generation" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="등록" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
	<a asp-action="Index">뒤로</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
