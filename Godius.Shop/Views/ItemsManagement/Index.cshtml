@model IEnumerable<Godius.Shop.Models.Item>

@{
	ViewData["Title"] = "아이템 관리";
}

<h3>아이템 관리</h3>

<p>
	<a asp-action="Create">새 아이템 등록</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Weight)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.WC)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AC)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.HC)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DC)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Durability)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Image)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Category)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Weight)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.WC)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AC)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.HC)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DC)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Durability)
				</td>
				<td>
					@if (!String.IsNullOrEmpty(item.Image))
					{
						<img src="@item.Image" class="img-thumbnail" alt="@item.Image" />
					}
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">수정</a> |
					<a asp-action="Details" asp-route-id="@item.Id">상세정보</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">삭제</a>
				</td>
			</tr>
		}
	</tbody>
</table>
